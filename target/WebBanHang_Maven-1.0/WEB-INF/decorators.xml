<sitemesh>
    <!--     Định nghĩa các decorator -->
    <decorators defaultdir="/decorators">
        <excludes>
            <pattern>/api*</pattern>
        </excludes>
    
        <decorator name="admin" page="/decorators/admin.jsp">
            <pattern>/admin*</pattern>
        </decorator>
    
        <decorator name="web" page="/decorators/web.jsp">
            <pattern>/*</pattern>
        </decorator>
        
        <decorator name="authen" page="/decorators/authen.jsp">
            <pattern>/authen</pattern>
        </decorator>
        

    </decorators>
</sitemesh>

